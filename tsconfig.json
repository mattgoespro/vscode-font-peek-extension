{
  "include": ["src"],
  "exclude": ["**/node_modules/**", "eslint.config.mjs"],
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["dom", "es2022"],
    "outDir": "dist",
    "target": "es6",
    "types": ["node", "react"],
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
